{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Jest Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}\\node_modules\\jest\\bin\\jest.js",
            "args": [
                "--runInBand",
                "--no-cache",
                "--watchAll=false",
                "--config=configs/jest/jest.config.js"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": { "CI": "true" },
            "disableOptimisticBPs": true
        }
    ]
}
